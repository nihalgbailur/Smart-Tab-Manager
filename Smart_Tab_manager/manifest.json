{
    "manifest_version": 3,
    "name": "Smart Tab Manager",
    "version": "1.0",
    "description": "Categorize and manage your tabs with AI suggestions.",
    "permissions": ["tabs", "storage"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
    "background": {
      "service_worker": "background.js"
    }
  }